<template>
  <div id="app">
    <h1>我是app</h1>
    <Pagination :pageNo="page" :pageSize="5" :total="90" :continues="3" @getPageNo="getPageNo"></Pagination>
  </div>
</template>

<script>
import Pagination from "@/components/Pagination.vue"
export default {
  name: 'App',
  data() {
    return {
      // 初始化页数
      page:1
    }
  },
  components: {
    Pagination
  },
  methods: {
    getPageNo(page) {
      this.page = page;
    }
  }
}
</script>

